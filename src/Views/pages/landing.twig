{% extends "layout/base.twig" %}

{% block title %}TicketApp - Streamline Your Support{% endblock %}

{% block content %}
<div class="bg-gray-50 dark:bg-gray-900">
    {% include 'components/header.twig' %}
    
    <div class="relative bg-indigo-600 dark:bg-indigo-900 overflow-hidden">
        <div class="absolute w-48 h-48 rounded-full bg-indigo-200 dark:bg-indigo-800/50 -top-20 -left-20"></div>
        <div class="absolute w-72 h-72 rounded-full bg-indigo-200 dark:bg-indigo-800/50 top-1/2 -right-36 transform -translate-y-1/2 opacity-50"></div>
        
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="pt-24 pb-40 sm:pt-32 sm:pb-48 lg:pt-40 lg:pb-56 text-center text-white">
                <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl md:text-6xl">
                    Streamline Your Support
                </h1>
                <p class="mt-6 max-w-2xl mx-auto text-lg text-indigo-100">
                    TicketApp is the modern, intuitive, and powerful solution for managing customer support tickets. Focus on what matters: happy customers.
                </p>
                <div class="mt-10 max-w-sm mx-auto sm:max-w-none sm:flex sm:justify-center space-y-4 sm:space-y-0 sm:space-x-4">
                    <a href="/signup" class="inline-block px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-white hover:bg-indigo-50 sm:px-10">
                        Get Started
                    </a>
                    <a href="/login" class="inline-block px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-600 sm:px-10">
                        Login
                    </a>
                </div>
            </div>
        </div>
        
        <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0]">
            <svg viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg" class="relative block w-[calc(100%+1.3px)] h-[150px] sm:h-[200px] lg:h-[250px] text-gray-50 dark:text-gray-900">
                <path fill="currentColor" d="M0,224L48,213.3C96,203,192,181,288,186.7C384,192,480,224,576,245.3C672,267,768,277,864,261.3C960,245,1056,203,1152,170.7C1248,139,1344,117,1392,106.7L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
            </svg>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24 lg:py-32">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-8">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white">Create & Assign</h3>
                <p class="mt-4 text-gray-500 dark:text-gray-400">Easily create new tickets, add details, and assign them to the right team members in seconds.</p>
            </div>
            <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-8">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white">Track Progress</h3>
                <p class="mt-4 text-gray-500 dark:text-gray-400">Monitor the status of every ticket from 'open' to 'closed' with our intuitive status tags.</p>
            </div>
            <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-8">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white">Resolve & Analyze</h3>
                <p class="mt-4 text-gray-500 dark:text-gray-400">Resolve issues efficiently and gain insights from your support data on our dashboard.</p>
            </div>
        </div>
    </div>

    {% include 'components/footer.twig' %}
</div>
{% endblock %}
